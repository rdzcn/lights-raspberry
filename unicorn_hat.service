[Unit]
Description=Unicorn HAT LED Controller API
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/pi/lights-raspberry
ExecStart=/home/pi/lights-raspberry/venv/bin/gunicorn --workers 1 --bind 0.0.0.0:5000 app:app
Restart=always
RestartSec=10
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
